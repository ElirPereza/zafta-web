# ============================================================================
# DATABASE - Prisma + Supabase PostgreSQL
# ============================================================================

# Local development (Prisma Postgres)
DATABASE_URL="prisma+postgres://localhost:51213/?api_key=..."

# Production (Supabase) - Replace with your Supabase connection string
# DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# ============================================================================
# AUTHENTICATION - Clerk
# ============================================================================

# Get these from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_publishable_key_here
CLERK_SECRET_KEY=your_secret_key_here

# Clerk Routes
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/iniciar-sesion
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/registrarse
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# ============================================================================
# STORAGE - Supabase Storage (for product images and invoices)
# ============================================================================

# Get these from: https://app.supabase.com/project/[YOUR-PROJECT]/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ============================================================================
# PAYMENT INTEGRATION - Wompi
# ============================================================================

# Get these from: https://comercios.wompi.co
# For testing, use: pub_test_X0zDA9xoKdePzhd8a0x9HAez7HgGO2fH
NEXT_PUBLIC_WOMPI_PUBLIC_KEY=your_wompi_public_key_here
WOMPI_PRIVATE_KEY=your_wompi_private_key_here

# Integrity secret para generar firmas de transacciones
# Este es el "prod_integrity" que aparece en tu dashboard de Wompi
WOMPI_INTEGRITY_SECRET=your_wompi_integrity_secret_here

# Events secret para validar webhooks
WOMPI_EVENTS_SECRET=your_wompi_events_secret_here

# ============================================================================
# EMAIL - Resend (for order confirmations and invoices)
# ============================================================================

# Get this from: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here

# ============================================================================
# APP CONFIGURATION
# ============================================================================

NEXT_PUBLIC_APP_URL=http://localhost:3000

# Admin email - Only this email can access the admin panel
ADMIN_EMAIL=tu-email@ejemplo.com

# Admin email for client-side validation (floating button)
NEXT_PUBLIC_ADMIN_EMAIL=tu-email@ejemplo.com
