// ZAFTA E-commerce Database Schema
// Prisma schema for Supabase PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// PRODUCTO MODELS
// ============================================================================

// Product model with drag-and-drop ordering support
model Product {
  id           String      @id @default(cuid())
  name         String
  slug         String      @unique
  description  String?     @db.Text
  price        Decimal     @db.Decimal(10, 2)
  comparePrice Decimal?    @db.Decimal(10, 2)
  images       String[]
  category     String?     // Optional category field
  inStock      Boolean     @default(true)
  featured     Boolean     @default(false)
  displayOrder Int         @default(0) // Controls display order in product listings
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  orderItems   OrderItem[]

  @@index([category])
  @@index([featured])
  @@index([slug])
  @@index([displayOrder]) // Index for efficient ordering queries
}

// ============================================================================
// ORDER MODELS
// ============================================================================

model Order {
  id                     String        @id @default(cuid())
  orderNumber            String        @unique
  userId                 String?       // Optional for guest checkout
  customerName           String        // Guest customer name
  customerEmail          String        // Guest customer email
  customerPhone          String        // Guest customer phone
  shippingAddress        String        // Shipping address as string
  shippingCity           String        // Shipping city
  shippingDepartment     String        // Shipping department
  deliveryNotes          String?       // Optional delivery notes
  status                 OrderStatus   @default(PENDING)
  paymentMethod          String
  paymentStatus          PaymentStatus @default(PENDING)
  paymentTransactionId   String?       // Wompi transaction ID
  subtotal               Decimal       @db.Decimal(10, 2)
  shippingCost           Decimal       @db.Decimal(10, 2) @default(0)
  discountCode           String?       // Discount code used (if any)
  discountAmount         Decimal       @db.Decimal(10, 2) @default(0) // Discount amount applied
  total                  Decimal       @db.Decimal(10, 2)
  items                  OrderItem[]
  invoice                Invoice?
  createdAt              DateTime      @default(now())
  updatedAt              DateTime      @updatedAt

  @@index([userId])
  @@index([orderNumber])
  @@index([status])
  @@index([paymentStatus])
  @@index([customerEmail]) // Index for checking used discount codes
}

model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  productId String
  name      String
  price     Decimal  @db.Decimal(10, 2)
  quantity  Int
  imageUrl  String?
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id])
  createdAt DateTime @default(now())

  @@index([orderId])
  @@index([productId])
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  IN_TRANSIT
  DELIVERED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

// ============================================================================
// INVOICE MODELS
// ============================================================================

model Invoice {
  id              String   @id @default(cuid())
  invoiceNumber   String   @unique
  orderId         String   @unique
  userId          String
  customerName    String
  customerEmail   String
  customerPhone   String
  customerAddress Json
  taxId           String?
  companyName     String?
  items           Json
  subtotal        Decimal  @db.Decimal(10, 2)
  tax             Decimal  @db.Decimal(10, 2) @default(0)
  shippingCost    Decimal  @db.Decimal(10, 2) @default(0)
  total           Decimal  @db.Decimal(10, 2)
  issuedAt        DateTime @default(now())
  dueDate         DateTime?
  paidAt          DateTime?
  pdfUrl          String?
  order           Order    @relation(fields: [orderId], references: [id])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
  @@index([invoiceNumber])
  @@index([orderId])
}

// ============================================================================
// USER MANAGEMENT MODELS (Clerk integration)
// ============================================================================

model UserMetadata {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  role      UserRole @default(CUSTOMER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([clerkId])
  @@index([role])
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  CUSTOMER
}

// ============================================================================
// GALLERY MODELS
// ============================================================================

model GalleryImage {
  id          String        @id @default(cuid())
  imageUrl    String        // URL from Supabase Storage
  alt         String
  section     GallerySection // Which section this image belongs to
  displayOrder Int          @default(0) // Order of display
  isActive    Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([section])
  @@index([displayOrder])
  @@index([isActive])
}

enum GallerySection {
  PERSONALIZADAS  // Tortas Personalizadas section
  EVENTOS         // Eventos Especiales section
}

// ============================================================================
// DISCOUNT POPUP MODELS
// ============================================================================

model DiscountPopup {
  id              String   @id @default(cuid())
  title           String
  description     String   @db.Text
  discountCode    String
  discountPercent Int      // Percentage discount (e.g., 10 for 10%)
  imageUrl        String?  // Optional image for the popup
  isActive        Boolean  @default(false) // Only one can be active at a time
  startDate       DateTime?
  endDate         DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([isActive])
}
